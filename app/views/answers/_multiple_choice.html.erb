<% question.options.each do |o| %>
  <% if question.question_type != "Multiple Choice" %>
    <%= ff.hidden_field :answer_text %>
  <% else %>
    <%= ff.radio_button :answer_text, o.name, required: "#{"required" if @submission.answers.each {|a| a.errors}}" %>
    <%= o.name %>
  <% end %>
<% end %>
