
<body class="white">
  <div class="heading-container with-button">

    <span class="possum-logo small-logo">
      <%= image_tag 'possum-logo-khaki.jpg', width: '100' %>
    </span>

    <h1 class="heading-text shorter smaller">SurveyPossum Form Builder</h1>
    <span class="logout-button">Logout</span>
      <div></div>
    <span class="create-new-button"><%= link_to 'New Survey', new_survey_path %></span>

    </div>

  </div>
      <div class="survey-list">
        <h1 class= "list-heading">Survey List</h1>
        <li class ="block3 block-header">Title </li>
        <li class ="block3 block-header">Description </li>
        <li class ="block3 block-header">Author</li>
        <% @surveys.each do |survey| %>
        <li class ="block3"><td><%= survey.title %></td> </li>
        <li class ="block3"><td><%= survey.description %></td></li>
        <li class ="block3"><td><%= survey.author_id %></td></li>
      </div>
      <div class="options-nav">
        <li class ="block4">  <td><%= link_to 'Take Survey', survey %></td> </li>
        <li class ="block4">  <td><%= link_to 'See Answers', submissions_path(:survey_id => survey.id) %></td> </li>
        <li class ="block4"> <td><%= link_to 'Edit', edit_survey_path(survey) %></td> </li>
        <li class ="block4">  <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td> </li>
        <br>
        <%= link_to 'New Survey', new_survey_path %>
      </div>
    </div>
    <% end %>
