
<div class="heading-container with-button">

  <span class="possum-logo">
    <%= image_tag 'possum-logo-khaki.jpg', width: '100' %>
  </span>

  <h1 class="heading-text shorter">SurveyPossum Form Builder</h1>
<!-- need to add a 'logout' button that takes the user back to 'sessions' here' -->
<%= link_to 'Logout', logout_sessions_path %>
  <span class="logout-button">Logout<span>
</div>

<div class="index-content">
  <h1>Listing Surveys</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Author</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @surveys.each do |survey| %>
        <tr>
          <td><%= survey.title %></td>
          <td><%= survey.description %></td>
          <td><%= survey.author_id %></td>
          <td><%= link_to 'Take Survey', survey %></td>
          <td><%= link_to 'See Answers', submissions_path(:survey_id => survey.id) %></td>
          <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
          <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Survey', new_survey_path %>
</div>
