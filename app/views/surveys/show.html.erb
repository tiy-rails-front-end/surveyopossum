<%= @survey= params[:survey] unless @survey %>
<p>
  <strong>Title:</strong>
  <%= @survey.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @survey.description %>
</p>


<p>
  <% @survey.questions.each do |question| %>
  <strong>Question:</strong> <%= question.question_text %>
    <%= render "answers/form", question: question %>
  <% end %>
</p>

<p>
  <%= link_to "Edit", edit_survey_path(@survey) %> |
  <%= link_to "Destroy", @survey, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", surveys_path %>
</p>
